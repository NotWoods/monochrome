{
  "name": "monochrome",
  "private": true,
  "scripts": {
    "format": "prettier 'src/*/*.js' 'lib/*.mjs' 'css/*.css' '*.{html,md,json}' '*.{mjs,cjs}' '*.cjs' --write",
    "postformat": "eslint 'src/**/*.js' 'lib/**/*.mjs' '*.{mjs,cjs}' --fix",
    "test": "tsc",
    "build": "npm run prepare -- --optimize && npm run minify:js:src && npm run minify:js:modules && npm run minify:css && npm run sw && npm run minify:js:sw",
    "prepare": "snowpack",
    "sw": "workbox generateSW workbox-config.cjs",
    "nomodule": "rollup -c",
    "minify:css": "csso css/viewer.css -o css/viewer.css",
    "minify:js:src": "find src -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:modules": "find web_modules -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:sw": "terser --compress --mangle --module -o sw.js -- sw.js"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.8.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-multi-entry": "^4.1.0",
    "csso-cli": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "~2.3.2",
    "rollup": "^2.56.2",
    "snowpack": "^1.7.1",
    "terser": "^5.7.1",
    "types-wm": "^1.1.0",
    "typescript": "^4.3.5",
    "workbox-cli": "^6.2.4"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "snowpack": {
    "webDependencies": [
      "dark-mode-toggle",
      "file-drop-element"
    ]
  }
}
