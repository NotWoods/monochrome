{
  "name": "monochrome",
  "private": true,
  "scripts": {
    "format": "prettier src/*/*.js lib/*.js tests/*/*.ts css/*.css *.{html,md,json} {workbox-,rollup.}config.js --write",
    "build": "npm run prepare -- --optimize && npm run minify:js:src && npm run minify:js:modules && npm run minify:css && npm run sw && npm run minify:js:sw",
    "prepare": "snowpack",
    "sw": "workbox generateSW workbox-config.js",
    "nomodule": "rollup -c",
    "minify:css": "csso css/viewer.css -o css/viewer.css",
    "minify:js:src": "find src -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:modules": "find web_modules -iname \"*.js\" -exec terser --compress --mangle --module -o {} -- {} \\;",
    "minify:js:sw": "terser --compress --mangle --module -o sw.js -- sw.js"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.6.0",
    "file-drop-element": "^0.2.0",
    "insights-js": "^1.2.10"
  },
  "devDependencies": {
    "@rollup/plugin-multi-entry": "^3.0.1",
    "csso-cli": "^3.0.0",
    "prettier": "^2.0.5",
    "rollup": "^2.38.5",
    "snowpack": "^1.7.1",
    "terser": "^5.5.1",
    "workbox-cli": "^6.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "snowpack": {
    "webDependencies": [
      "dark-mode-toggle",
      "file-drop-element",
      "insights-js/dist/esnext/index.js"
    ]
  }
}
