{
  "name": "monochrome",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "prettier . --ignore-path .gitignore --check && eslint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore --write && eslint . --ignore-path .gitignore --fix",
    "test": "npm run check && vitest",
    "check": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dark-mode-toggle": "^0.8.0",
    "file-drop-element": "^1.0.1"
  },
  "devDependencies": {
    "@typescript/lib-dom": "npm:@types/web@^0.0.99",
    "@vitejs/plugin-legacy": "^4.0.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "jsdom": "^22.1.0",
    "prettier": "~2.8.8",
    "types-wm": "^1.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-pwa": "^0.15.1",
    "vite-plugin-webfont-dl": "^3.6.1",
    "vitest": "^0.31.1"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "snowpack": {
    "webDependencies": [
      "dark-mode-toggle",
      "file-drop-element"
    ]
  }
}
